{
  "name": "@floorplan/components",
  "version": "0.0.0",
  "description": "OP components for native and web...",
  "keywords": [
    "react",
    "component",
    "library"
  ],
  "author": "bcbrian <me@bcbrian.com>",
  "homepage": "",
  "license": "MIT",
  "main": "lib/components.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "yarn js:watch",
    "devbuild": "rimraf ./lib && cross-env NODE_ENV=development tsc -p tsconfig.json",
    "js:build": "rimraf ./lib && cross-env NODE_ENV=production tsc -p tsconfig.json",
    "build-js:prod": "rimraf ./lib && yarn js:build && cross-env NODE_ENV=production babel src --out-dir lib --copy-files --source-maps --extensions \".ts,.tsx,.js,.jsx,.mjs\"",
    "js:watch:old": "rimraf ./lib && cross-env NODE_ENV=development concurrently -k -n \"typescript,babel\" -c \"blue.bold,yellow.bold\"  \"tsc -p tsconfig.dev.json --watch\" \"babel src --out-dir lib --source-maps --extensions \".ts,.tsx,.js,.jsx,.mjs\" --copy-files --watch --verbose\"",
    "js:watch": "cross-env NODE_ENV=development tsc -p tsconfig.dev.json --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@types/node": "^14.14.14",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "babel-core": "^6.26.3",
    "babel-loader": "8.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-art": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-native": "0.63.3",
    "react-native-web": "^0.12.2",
    "styled-components": "^5.1.1"
  },
  "dependencies": {
    "react-native": "^0.63.4",
    "styled-components": "^5.2.1"
  }
}
